<%- include("partials/header.ejs") -%>

<h2>Compose</h2>

<form action="/compose" method="post">

    <div class="form-group">
        <label>Title</label>
        <input name="inputTitle" type="text" class="form-control" placeholder="Enter some Title" required />
    </div>

    <div class="form-group">
        <label>Post</label>
        <textarea name="inputContent" class="form-control" rows="4" placeholder="Enter some Paragraph content" required></textarea>
    </div>

    <button class="btn btn-primary" id="button" name="inputPublish">Publish</button>

</form>

